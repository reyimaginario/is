	private Integer getLscore() throws JSONException {
		Integer result = new Integer(0);
		result = answers.getBoolean("16")? result++ : result;
		result = answers.getBoolean("29")? result++ : result;
		result = answers.getBoolean("41")? result++ : result;
		result = answers.getBoolean("51")? result++ : result;
		result = answers.getBoolean("77")? result++ : result;
		result = answers.getBoolean("93")? result++ : result;
		result = answers.getBoolean("102")? result++ : result;
		result = answers.getBoolean("107")? result++ : result;
		result = answers.getBoolean("123")? result++ : result;
		result = answers.getBoolean("139")? result++ : result;
		result = answers.getBoolean("153")? result++ : result;
		result = answers.getBoolean("183")? result++ : result;
		result = answers.getBoolean("203")? result++ : result;
		result = answers.getBoolean("232")? result++ : result;
		result = answers.getBoolean("260")? result++ : result;
		return result;
	}

