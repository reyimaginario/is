	private Map<Integer, Integer> lScaleF = new HashMap<>();
	
	@Override
	public String procesarRespuestas(List<Respuesta> respuestas) {
		this.answers = respuestas.get(0).getAnswersAsJson();
		try {
			initScaleConstant();
			buildBasicScales();
		} catch (JSONException e) {
			e.printStackTrace();
		}
		return null;
	}

