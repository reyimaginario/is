	private JSONObject getLscore() throws JSONException {
		JSONObject result = new JSONObject();
		Integer pb = new Integer(0);
		pb = answers.getBoolean("16")? pb++ : pb;
		pb = answers.getBoolean("29")? pb++ : pb;
		pb = answers.getBoolean("41")? pb++ : pb;
		pb = answers.getBoolean("51")? pb++ : pb;
		pb = answers.getBoolean("77")? pb++ : pb;
		pb = answers.getBoolean("93")? pb++ : pb;
		pb = answers.getBoolean("102")? pb++ : pb;
		pb = answers.getBoolean("107")? pb++ : pb;
		pb = answers.getBoolean("123")? pb++ : pb;
		pb = answers.getBoolean("139")? pb++ : pb;
		pb = answers.getBoolean("153")? pb++ : pb;
		pb = answers.getBoolean("183")? pb++ : pb;
		pb = answers.getBoolean("203")? pb++ : pb;
		pb = answers.getBoolean("232")? pb++ : pb;
		pb = answers.getBoolean("260")? pb++ : pb;
		
		Integer ptm = lScaleM.get(pb);
		Integer ptf = lScaleF.get(pb);
		
		return null;
	}

